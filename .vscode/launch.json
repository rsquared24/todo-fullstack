{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug core",
      "runtimeVersion": "10.15.3",
      "program": "${workspaceFolder}/core/dist/main.js",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/core/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug core all tests",
      "runtimeVersion": "10.15.3",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--config", 
        "${workspaceRoot}/core/jest.config.json"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug api all tests",
      "runtimeVersion": "10.15.3",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--config", 
        "${workspaceRoot}/api/jest.config.json"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug api current test",
      "runtimeVersion": "10.15.3",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${relativeFile}",
        "--runInBand",
        "--config", 
        "${workspaceRoot}/api/jest.config.json"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}